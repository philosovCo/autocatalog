<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>catalog</servlet-name>
        <servlet-class>ru.itpark.servlet.CatalogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>autoSave</servlet-name>
        <servlet-class>ru.itpark.servlet.AutoSaveServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config/>
    </servlet>
    <servlet>
        <servlet-name>autoDelete</servlet-name>
        <servlet-class>ru.itpark.servlet.AutoDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>images</servlet-name>
        <servlet-class>ru.itpark.servlet.ImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>csv</servlet-name>
        <servlet-class>ru.itpark.servlet.CSVServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config/>
    </servlet>

    <!--mapping-->
    <servlet-mapping>
        <servlet-name>catalog</servlet-name>
        <url-pattern>/catalog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>catalog</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>catalog</servlet-name>
        <url-pattern>/catalog/details/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>autoSave</servlet-name>
        <url-pattern>/catalog/new</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>autoSave</servlet-name>
        <url-pattern>/catalog/edit/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>autoDelete</servlet-name>
        <url-pattern>/catalog/delete/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>images</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>csv</servlet-name>
        <url-pattern>/csv</url-pattern>
    </servlet-mapping>
</web-app>